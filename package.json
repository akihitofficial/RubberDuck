{
    "name": "rubberduck",
    "productName": "RubberDuck",
    "version": "2.0.0",
    "description": "Aplicação feita pelo time de desenvolvedores a fim de atender as requisições da comunidade quanto a um aplicativo estável e funcional.",
    "homepage": "https://github.com/akihitofficial/rubberduck",
    "main": "index.js",
    "scripts": {
        "start": "electron .",
        "build-win": "electron-builder --win",
        "build-linux": "electron-builder --linux",
        "build-macos": "electron-builder --mac"
    },
    "keywords": [
        "Application",
        "FlashApp",
        "Multi-Platform",
        "Latin America",
        "Habbo",
        "Hotel",
        "Habbo Hotel"
    ],
    "author": {
        "name": "DotDev™ Group",
        "email": "mount.akira@hotmail.com",
        "url": "https://github.com/akihitofficial/rubberduck"
    },
    "license": "ISC",
    "devDependencies": {
        "electron": "11.1.0",
        "electron-builder": "22.9.1"
    },
    "dependencies": {
        "axios": "^0.24.0",
        "discord-rpc": "^4.0.1",
        "fs": "^0.0.1-security",
        "https": "^1.0.0",
        "jquery": "^3.2.1",
        "path": "^0.12.7",
        "qs": "^6.10.1"
    },
    "build": {
        "appId": "dotdev.services.rubberduck",
        "extraResources": [
            "./PepperFlash/**"
        ],
        "directories": {
            "buildResources": "resources",
            "output": "release"
        },
        "publish": [
            {
                "provider": "github",
                "owner": "dotDev",
                "repo": "RubberDuck",
                "releaseType": "release",
                "vPrefixedTagName": true,
                "publishAutoUpdate": true
            }
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ]
        },
        "nsis": {
            "installerIcon": "icon.ico",
            "uninstallerIcon": "icon.ico",
            "uninstallDisplayName": "Uninstall",
            "oneClick": true,
            "perMachine": false,
            "artifactName": "RubberDuckSetup.${ext}"
        },
        "mac": {
            "icon": "icon.png",
            "category": "public.games.social-networking",
            "darkModeSupport": true,
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "build/entitlements-mac.plist",
            "entitlementsInherit": "build/entitlements-mac.plist",
            "target": [
                "dmg"
            ]
        },
        "dmg": {
            "iconSize": 160,
            "contents": [
                {
                    "x": 180,
                    "y": 170
                },
                {
                    "x": 480,
                    "y": 170,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "linux": {
            "target": [
                {
                    "target": "deb",
                    "arch": [
                        "x64",
                        "ia32",
                        "armv7l",
                        "arm64"
                    ]
                }
            ],
            "category": "Network;Chat"
        }
    }
}
